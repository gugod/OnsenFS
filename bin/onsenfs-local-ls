#!/usr/bin/env perl
use v5.14;
use OnsenFS::LocalVFS;
use Path::Class;

my $root = shift(@ARGV) or die "die die";
die unless -d $root;

my $path = shift(@ARGV) || "";

my $local = OnsenFS::LocalVFS->new(root => $root);

my $dirs = $local->dirs;

my $p = $dirs->{$path};
for (@{ $p->{dirs} }) {
    say "$_/";
}

for (@{ $p->{files} }) {
    say "$_";
}
